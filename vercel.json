{
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" },
    {
      "src": "/api/(.*)",
      "dest": "backend/index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "backend/auth.js"
    }
  ],

  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/auth.js",
      "use": "@vercel/node"
    }
  ]
}
